.container {
  padding: 20rpx;
}

.input-section {
  position: relative;
  margin: 30rpx 0;
}

.symptom-input {
  width: 100%;
  height: 300rpx;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.submit-btn {
  width: 90%;
  margin: 40rpx auto;
  border-radius: 50rpx;
  background: #4a90e2;
}

.diagnosis-tag {
  background: #f0f7ff;
  color: #4a90e2;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  margin: 20rpx 0;
  font-weight: bold;
}

.video-card {
  margin: 30rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.medical-video {
  width: 100%;
  height: 400rpx;
}

.video-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.disclaimer {
  margin-top: 50rpx;
  padding: 30rpx;
  background: #fff9f9;
  color: #e64340;
  font-size: 24rpx;
  text-align: center;
  border-radius: 8rpx;
} 